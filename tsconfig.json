{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "DOM"],
    
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,

    "declaration": true,
  },
  "include": [
    "src",
    "scripts",
    ".eslintrc.js"
  ]
}